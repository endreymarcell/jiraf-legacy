{
  "name": "jiraf",
  "version": "0.1.0",
  "description": "Command-line helper for Jira-GitHub workflow",
  "main": "index.js",
  "scripts": {
    "format": "prettier --write src/*.js src/**/*.js test/*.js test/**/*.js",
    "test": "mocha test/smoke-test.js",
    "functional-test": "[ -f /.dockerenv ] && mocha test/functional-tests || echo 'The functional test suit must be run in a container'",
    "lint": "eslint src test",
    "fix-lint": "eslint --fix src test"
  },
  "author": "Marcell Endrey <endrey.marcell@gmail.com>",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/endreymarcell/jiraf.git"
  },
  "dependencies": {
    "axios": "0.18.0",
    "command-line-args": "5.0.2",
    "opn": "5.4.0"
  },
  "devDependencies": {
    "babel-eslint": "10.0.1",
    "eslint": "5.7.0",
    "express": "4.16.4",
    "mocha": "5.2.0",
    "prettier": "1.14.3"
  },
  "prettier": {
    "printWidth": 120,
    "trailingComma": "es5",
    "bracketSpacing": false
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "mocha": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "extends": "eslint:recommended",
    "rules": {
      "no-console": 0,
      "curly": ["error", "all"],
      "default-case": "error",
      "dot-location": ["error", "property"],
      "eqeqeq": ["error", "always", {"null": "ignore"}],
      "no-multi-spaces": "error",
      "no-throw-literal": "error",
      "no-unused-expressions": "error",
      "global-require": "error",
      "no-mixed-requires": ["error", {"grouping": true}],
      "array-bracket-spacing": ["error", "never"],
      "block-spacing": ["error", "always"],
      "brace-style": "error",
      "camelcase": "error",
      "comma-dangle": ["error", "always-multiline"],
      "eol-last": ["error", "always"],
      "indent": ["error", 4, {"SwitchCase": 1}],
      "newline-per-chained-call": "error",
      "line-comment-position": ["error", {"position": "above"}],
      "key-spacing": "error",
      "no-trailing-spaces": "error",
      "object-curly-spacing": ["error", "never"],
      "one-var": ["error", "never"],
      "space-in-parens": ["error", "never"],
      "arrow-spacing": "error",
      "no-var": "error",
      "prefer-arrow-callback": "error",
      "prefer-const": "error",
      "template-curly-spacing": ["error", "never"]
    }
  }
}
