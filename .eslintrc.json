{
  "env": {
    "node": true,
    "mocha": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "extends": "eslint:recommended",
  "rules": {
    "no-console": 0,
    "curly": [
      "error",
      "all"
    ],
    "default-case": "error",
    "dot-location": [
      "error",
      "property"
    ],
    "eqeqeq": [
      "error",
      "always",
      {
        "null": "ignore"
      }
    ],
    "no-multi-spaces": "error",
    "no-throw-literal": "error",
    "global-require": "error",
    "no-mixed-requires": [
      "error",
      {
      "grouping": true
      }
    ],
    "array-bracket-spacing": [
      "error",
      "never"
    ],
    "block-spacing": [
      "error",
      "always"
    ],
    "brace-style": "error",
    "camelcase": "error",
    "comma-dangle": [
      "error",
      "always-multiline"
    ],
    "eol-last": [
      "error",
      "always"
    ],
    "indent": [
      "error",
      4,
      {
        "SwitchCase": 1
      }
    ],
    "newline-per-chained-call": "error",
    "line-comment-position": [
      "error",
      {
        "position": "above"
      }
    ],
    "key-spacing": "error",
    "no-trailing-spaces": "error",
    "object-curly-spacing": [
      "error",
      "never"
    ],
    "one-var": [
      "error",
      "never"
    ],
    "space-in-parens": [
      "error",
      "never"
    ],
    "arrow-spacing": "error",
    "no-var": "error",
    "prefer-arrow-callback": "error",
    "prefer-const": "error",
    "template-curly-spacing": [
      "error",
      "never"
    ]
  }
}
